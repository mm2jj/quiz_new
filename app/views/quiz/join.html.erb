<div class="row">
  <div class="col">


    <%= form_tag('/quiz/index', method: 'get') do %>
        <div class="form-group">
          <%= text_field_tag 'code', nil, placeholder: "Enter the game code to continue...", class: 'form-control form-control-lg', required: true %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Join', class:"btn btn-primary btn-lg" %>
        </div>
    <% end %>
  </div>
</div>